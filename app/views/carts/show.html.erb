<h2>Cart show</h2>
<ul>
  <% @cart.cart_items.each do |cart_item| %>
  <%#= raise carte_item.inspect %>
    <li>Item: <%= cart_item.product.name %>/ Price: <%= number_to_currency(cart_item.product.price) %>/ Quantity: <%= cart_item.quantity %>/ Total Price: <%= number_to_currency(cart_item.total_price) %>
    <ul>
      <li>
        <%= link_to "Add(+1)", cart_item_add_path(:id => cart_item), method: :post %>
        <%= link_to "Reduce(-1)", cart_item_reduce_path(:id => cart_item), method: :post %>
      </li>
      <li>
        <%= link_to "Remove item", cart_item_path(cart_item), method: :delete %>
      </li>
    </ul>
  <% end %>
</ul>
<h3>Sub total: <%= number_to_currency(@cart.sub_total) %></h3>

<%= link_to "Validate cart", orders_path, method: :post %><br>
<%= link_to "Empty cart", cart_path(@current_cart),method: :delete, data: {confirm: "Are you sure?"} %> <br>
<%= link_to "retour", :back%>